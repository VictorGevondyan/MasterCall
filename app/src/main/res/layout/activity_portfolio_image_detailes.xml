<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_portfolio_image_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idealsystems.idealmaster.activities.PortfolioImageDetailsActivity"
    android:orientation="vertical">

    <include layout="@layout/bar_action_simple"
        android:id="@+id/action_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/portfolio_image_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
